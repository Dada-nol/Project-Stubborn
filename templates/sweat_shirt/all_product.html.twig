{% extends 'base.html.twig' %}

{% block title %}Hello SweatShirtController!
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}
	<div class="container mt-5 mb-5">
		<div class="row d-flex justify-content-center">

			{{ form_start(form) }}
			{{ form_row(form.priceRanges) }}
			{{ form_end(form) }}
			{% if products %}
				{% for product in products %}

					<div class="col-md-6 col-lg-4 d-flex justify-content-center align-items-center mb-5">

						<div class="card">
							<div>
								<img src="{{ asset('uploads/img/' ~ product.imageFilename) }}" class="card-img-top img-fluid" alt="ReprÃ©sentation graphique de ce sweat-shirt">
							</div>
							<div class="card-body d-flex justify-content-between">
								<div>
									<p class="card-title">{{ product.name }}</p>
									<p class="card-text">{{ product.price }}</p>
								</div>
								<div>
									<a href="{{ path('app_one_product', {'id': product.id}) }}" class="btn btn-primary">Voir</a>
								</div>

							</div>
						</div>
					</div>

				{% endfor %}
			{% endif %}
		</div>
	</div>
	{% include "footer.html.twig" %}
{% endblock %}
