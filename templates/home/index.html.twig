{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}

	<main>
		<div class="container text-center mt-5 mb-5">
			<div class="row d-flex justify-content-center">

				{% for product in products %}
					{% if product.isPromoted == true %}
						<div class="col-md-6 col-lg-4 d-flex justify-content-center align-items-center mb-5">
							<div class="card">
								<div>
									<img src="{{ asset('uploads/img/' ~ product.imageFilename) }}" class="card-img-top img-fluid" alt="ReprÃ©sentation graphique de ce sweat-shirt">
								</div>
								<div class="card-body d-flex justify-content-between">
									<div>
										<p class="card-title">{{ product.name }}</p>
										<p class="card-text">{{ product.price }}</p>
									</div>
									<div>
										<a href="{{ path('app_one_product', {'id': product.id}) }}" class="btn btn-primary">Voir</a>
									</div>

								</div>
							</div>
						</div>
					{% endif %}

				{% endfor %}

			</div>
		</div>
	</main>

	{% include "footer.html.twig" %}
{% endblock %}
