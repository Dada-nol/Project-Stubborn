{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}
	<div class="d-flex justify-content-center align-items-center vh-100">
		<div class="border border-black p-5 m-5 d-flex flex-column justify-content-center align-items-center w-25">
			<form method="post">

				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h3 class="mb-3">Se connecter</h3>
				<div>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember me
					</label>
				</div>

				<button class="btn btn-primary" type="submit">
					Se connecter
				</button>

			</br>

			<a href="{{path("app_forgot_password_request")}}">Mot de passe oublié ?</a>

		</form>

	</br>
	<div class="mt-3">
		<p>Pas encore inscrit ?</p>
		<a href="{{path("app_register")}}">
			<button class="btn btn-primary">Créez un compte</button>
		</a>
	</div>
</div></div>{% include "footer.html.twig" %}{% endblock %}
