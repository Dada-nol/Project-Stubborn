{% extends 'base.html.twig' %}

{% block body %}
	{% include "header.html.twig" %}

	{% for item in items %}
		<div class="container border border-black w-75 mt-5 mb-5">
			<div class="row">

				<div class="col-3 border">
					<img src="{{asset('build/img/' ~ item.sweatshirt.name ~ '.jpeg')}}">
				</div>

				<div class="col-9 d-flex justify-content-center ">

					<div class="m-5 d-flex flex-column align-items-center">
						<p class="mb-5">Nom du produit</p>
						<p>{{ item.sweatshirt.name }}</p>
					</div>
					<div class="m-5 d-flex flex-column align-items-center">
						<p class="mb-5">Prix</p>
						<p>{{ item.sweatshirt.price }}
							€</p>
					</div>
					<div class="m-5 d-flex flex-column align-items-center">
						<p class="mb-5">Taille</p>
						<p>{{ item.stock.size }}</p>
					</div>

					<div class="align-self-end mb-3">
						{{ form_start(deleteForms[item.id]) }}
						<button type="submit" class="btn btn-light border border-black">Remove</button>
						{{ form_end(deleteForms[item.id]) }}
					</div>
				</div>
			</div>
		</div>

	{% endfor %}

</br>
<div class="d-flex flex-row justify-content-center  text-center">
	<div class="border border-black mx-5 w-25 h-25">
		<h4>Total :
			{{ cart.getTotal() }}
			€</h4>
	</div>
	<div class="d-flex-column">
		{% include "payment/checkout.html.twig" %}
		<a href="{{path("app_home")}}">
			<button class="btn btn-success w-100 mb-5">Continuer mes achats</button>
		</a>
	</div>

</div>

{% include "footer.html.twig" %}{% endblock %}
