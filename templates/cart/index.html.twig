{% extends 'base.html.twig' %}

{% block body %}
	<h1>Votre Panier</h1>

	<table>
		<thead>
			<tr>
				<th>Article</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.sweatshirt.name }}</td>
					<td>{{ item.sweatshirt.price }}
						€</td>
					<td>{{ item.quantity }}</td>
					<td>{{ item.sweatshirt.price * item.quantity }}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<p>Total général :
		{{ cart.getTotal() }}
		€</p>
{% endblock %}
